<div class="background">
  <div class="index-wrapper">
    <div class="container">
      <div class="cards d-flex">
        <% @cocktails.each do |cocktail| %>
          <div class="card card-body shadow" style="background-image: url('<%= cl_image_path cocktail.photo.key %>')">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            <div class="rating">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



