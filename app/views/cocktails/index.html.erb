<nav class="navbar justify-content-between">
  <a class="navbar-brand"><i class="fas fa-cocktail px-3"></i>Cocktails</a>
  <%= link_to 'Add a Cocktail', new_cocktail_path, :class => "btn btn-primary"%>
</nav>
<div class="background">
  <div class="container">
    <div class="cards d-flex">
      <% @cocktails.each do |cocktail| %>
        <div class="card card-body shadow" style="background-image: url('<%= cocktail.image_url %>');">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <div class="rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



