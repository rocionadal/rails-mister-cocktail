<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand"><i class="fas fa-cocktail px-3"></i>Cocktails</a>
  <%= link_to 'Add a Cocktail', new_cocktail_path, :class => "btn-add"%>
</nav>
<div class="container">
  <div class="cards d-flex">
    <% @cocktails.each do |cocktail| %>
      <div class="card card-body" style="background-image: url('<%= cocktail.image_url %>');">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
        <p class="card-text">Rating</p>
      </div>
    <% end %>
  </div>
</div>




